@model NGKShop.Models.LOAINGK

@{
    ViewBag.Title = "SuaLH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa loại hàng</h2>

@using (Html.BeginForm("SuaLH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLH)

        <div class="form-group">
            Tên loại hàng
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Nhà cung cấp
            <div class="col-md-10">
                @Html.DropDownList("MaNCC")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "LoaiHang")
</div>
