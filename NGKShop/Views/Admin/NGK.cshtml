@model PagedList.PagedList<NGKShop.Models.MATHANG>
@using PagedList.Mvc;
@using NGKShop.Models;

@helper Truncate(string input, int length)
{
if (input.Length < length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}
@{
    ViewBag.Title = "NGK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>NGK</h2>

<p>
    <a href="@Url.Action("Create New", "Create")">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Mã mặt hàng
        </th>
        <th>
           Tên mặt hàng
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Hình sản phẩm
        </th>
        <th>
            Khuyến mãi
        </th>
        <th>
            Chức năng
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonViTinh)
        </td>
        <td>
            @Truncate(item.MoTa,100)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            <img src="@Url.Content("~/Content/Hinhsp/" + item.HinhSP)" width="250px" height="250px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhuyenMai)%
        </td>
        <td>
           <a href="@Url.Action("Edit", "Edit", new { id=item.MaMH })">Sửa</a> 
            <a href="@Url.Action("Details", "Details", new { id = item.MaMH })">Chi Tiết</a>
            <a href="@Url.Action("Delete", "Delete", new { id = item.MaMH })">Xóa</a>
        </td>
    </tr>
}

</table>
@*Tạo liên kết các trang*@
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("NGK", new { page = page }))
</div>
