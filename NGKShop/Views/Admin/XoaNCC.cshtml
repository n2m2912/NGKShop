@model NGKShop.Models.NCC

@{
    ViewBag.Title = "XoaNCC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa nhà cung cấp</h2>

<h3>Bạn có muốn xóa nhà cung cấp này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nhà cung cấp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNCC)
        </dd>

        <dt>
            Địa chỉ nhà cung cấp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiNCC)
        </dd>

        <dt>
            SDT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDTNCC)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "NCC")
        </div>
    }
</div>
