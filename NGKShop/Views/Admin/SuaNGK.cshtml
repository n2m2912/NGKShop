@model NGKShop.Models.MATHANG

@{
    ViewBag.Title = "SuaNGK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SuaNGK</h2>

@using (Html.BeginForm("SuaNGK", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaMH)


        <div class="form-group">
            Mã loại hàng:
            <div class="col-md-10">
                @Html.DropDownList("MaLH")
            </div>
        </div>

        <div class="form-group">
            Tên mặt hàng:
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMH)
                @Html.ValidationMessageFor(model => model.TenMH)
            </div>
        </div>

        <div class="form-group">
            Đơn vị tính:
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonViTinh)
                @Html.ValidationMessageFor(model => model.DonViTinh)
            </div>
        </div>

        <div class="form-group">
            Mô tả:
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa)
                @Html.ValidationMessageFor(model => model.MoTa)
            </div>
        </div>

        <div class="form-group">
            Giá bán:
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaBan)
                @Html.ValidationMessageFor(model => model.GiaBan)
            </div>
        </div>

        <div class="form-group">
            Hình sản phẩm:
            <div class="col-md-10">
                <input type="file" name="fileupload"/>
                <img src="@Url.Content("~/Content/Hinhsp/"+Model.HinhSP)" width="150px" />(Ảnh hiện tại)
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            Khuyến mãi
            <div class="col-md-10">
                @Html.EditorFor(model => model.KhuyenMai)
                @Html.ValidationMessageFor(model => model.KhuyenMai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "NGK")
</div>
